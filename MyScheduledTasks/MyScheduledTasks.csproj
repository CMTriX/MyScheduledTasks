<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <UseWPF>true</UseWPF>
	<AssemblyVersion>0.5.0.0</AssemblyVersion>
	<FileVersion>0.5.0</FileVersion>
	<Version>$(AssemblyVersion)</Version>
	<Description>Information about the scheduled tasks that you care about</Description>
	<Copyright>Copyright © $([System.DateTime]::UtcNow.Year) Tim Kennedy</Copyright>
	<Authors>Tim Kennedy</Authors>
	<Company>T_K</Company>
	<Product>My Scheduled Tasks</Product>
	<ApplicationIcon>Images\MST.ico</ApplicationIcon>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
	<Exec Command="powershell -NoProfile -File &quot;$(ProjectDir)Powershell\GenBuildInfo.ps1&quot; -assemblyName $(AssemblyName) -assemblyVersion $(AssemblyVersion)" />
  </Target>

  <ItemGroup>
    <Compile Remove="Dialogs\AddTasks.xaml.cs" />
    <Compile Remove="DragDrop.cs" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="Dialogs\AddTasks.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="gong-wpf-dragdrop" Version="3.1.1" />
    <PackageReference Include="MaterialDesignThemes" Version="4.4.0" />
    <PackageReference Include="NLog" Version="4.7.15" />
    <PackageReference Include="TaskScheduler" Version="2.10.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="License.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="ReadMe.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
